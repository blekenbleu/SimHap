<UserControl
    x:Class="sierses.Sim.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:sierses.Sim"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
    d:DataContext="{d:DesignInstance}"
    mc:Ignorable="d">

    <FrameworkElement.Resources>
        <Style x:Key="IconRectangle" TargetType="{x:Type Rectangle}">
            <Setter Property="UIElement.Opacity" Value="0.9" />
            <Setter Property="Shape.Fill" Value="White" />
            <Setter Property="FrameworkElement.Height" Value="50" />
            <Setter Property="FrameworkElement.Width" Value="50" />
        </Style>
        <Style x:Key="StatusCircle" TargetType="{x:Type Rectangle}">
            <Setter Property="UIElement.Opacity" Value="0.9" />
            <Setter Property="Shape.Fill" Value="White" />
            <Setter Property="FrameworkElement.Height" Value="10" />
            <Setter Property="FrameworkElement.Width" Value="10" />
        </Style>
        <Style x:Key="TabVis" TargetType="{x:Type StackPanel}">
            <Style.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="true">
                    <Setter Property="UIElement.Opacity" Value="0.6" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  corner radius textboxes  -->
        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                    <Setter Property="Height" Value="30" />
                </Style>
            </Style.Resources>
        </Style>

        <!--  corner radius expander start  -->
        <Style x:Key="ExpanderToggleButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="UseLayoutRounding" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid Width="24" Height="24">
                            <Border
                                x:Name="border"
                                Background="#27234D"
                                CornerRadius="12" />
                            <Path
                                x:Name="arrow"
                                Data="M4.5 9 l4 0 l3.5 4.6667 l3.5 -4.6667 l4 0 l-7.5 10 z"
                                Fill="White" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkGray" />
                                <Setter TargetName="arrow" Property="Fill" Value="LightGray" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White" />
                                <Setter TargetName="arrow" Property="Fill" Value="#27234D" />
                                <Setter TargetName="arrow" Property="Data" Value="M4.5 15 l4 0 l3.5 -4.6667 l3.5 4.6667 l4 0 l-7.5 -10 z" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Expander}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Expander}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition x:Name="ContentRow" Height="0" />
                            </Grid.RowDefinitions>
                            <Border
                                x:Name="Border"
                                Grid.Row="0"
                                Background="#4B4495"
                                BorderThickness="0"
                                CornerRadius="2,0,10,0">
                                <!--  color arround arrow  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="31" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton
                                        Grid.Column="0"
                                        IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        OverridesDefaultStyle="True"
                                        Style="{StaticResource ExpanderToggleButton}" />
                                    <!--  This is the border that puts the styling around the Expander Header  -->
                                    <!--  Add more detail here for a fancier header.  -->
                                    <Border
                                        Grid.Column="1"
                                        Background="#4B4495"
                                        CornerRadius="0,0,10,0">
                                        <ContentPresenter
                                            Height="30"
                                            Margin="10,2,0,0"
                                            ContentSource="Header"
                                            RecognizesAccessKey="True"
                                            TextBlock.FontSize="20"
                                            TextBlock.Foreground="White" />
                                    </Border>

                                </Grid>
                            </Border>
                            <Border
                                x:Name="Content"
                                Grid.Row="1"
                                BorderThickness="0"
                                CornerRadius="0,0,2,2">
                                <ContentPresenter Margin="4" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ContentRow" Property="Height" Value="{Binding DesiredSize, ElementName=Content}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  corner radius expander end  -->


        <!--  tabcontrol style start  -->

        <!--  tabcontrol style end  -->


    </FrameworkElement.Resources>
    <Grid>
        <TabControl>
            <TabItem Width="200" Padding="0,0,10,0">
                <HeaderedContentControl.Header>
                    <StackPanel
                        Margin="0,0"
                        Orientation="Horizontal"
                        Style="{StaticResource TabVis}">
                        <Rectangle Style="{StaticResource IconRectangle}">
                            <UIElement.OpacityMask>
                                <ImageBrush ImageSource="{Binding RPMIcon}" RenderOptions.BitmapScalingMode="HighQuality" />
                            </UIElement.OpacityMask>
                        </Rectangle>
                        <TextBlock
                            Margin="9,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="30"
                            Opacity="0.9"
                            Text="Engine" />
                    </StackPanel>
                </HeaderedContentControl.Header>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel
                            Margin="0,30,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Orientation="vertical">
                            <!--  EXPANDER Engine RPM properties  -->
                            <Expander
                                BorderThickness="2"
                                FontFamily="Segoe UI"
                                FontSize="16"
                                Header="Engine RPM Properties"
                                IsExpanded="True">
                                <StackPanel>

                                    <!--  CarName  -->
                                    <StackPanel
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="Name" /></TextBlock>
                                        <TextBox
                                            x:Name="CarName"
                                            MinWidth="300"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontSize="16"
                                            Text="{Binding S.CarName}" />
                                    </StackPanel>

                                    <!--  ID  -->
                                    <StackPanel
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="ID" /></TextBlock>
                                        <TextBox
                                            x:Name="CarID"
                                            MinWidth="300"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.Id}" />
                                    </StackPanel>

                                    <!--  Category  -->
                                    <StackPanel
                                        Margin="2,15,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="Category" /></TextBlock>
                                        <TextBox
                                            x:Name="CarClass"
                                            MinWidth="176"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.Category}" />
                                        <!--  Idle  -->
                                        <StackPanel
                                            Margin="0,0,2,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                MinWidth="10"
                                                Margin="9,0,8,0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                TextAlignment="Right"><Run Text="Idle" /></TextBlock>
                                            <TextBox
                                                x:Name="IdleRPM"
                                                MinWidth="80"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Text="{Binding S.IdleRPM}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Redline  -->
                                    <StackPanel
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="Redline" /></TextBlock>
                                        <TextBox
                                            x:Name="Redline"
                                            MinWidth="80"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.Redline}" />
                                        <!--  MaxRPM  -->
                                        <StackPanel
                                            Margin="57,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                MinWidth="75"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                TextAlignment="Right"><Run Text="Max RPM" /></TextBlock>
                                            <TextBox
                                                x:Name="MaxRPM"
                                                MinWidth="80"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Text="{Binding S.MaxRPM}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Engine configuration  -->
                                    <StackPanel
                                        Margin="0,15,6,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="Eng Config" /></TextBlock>
                                        <ComboBox
                                            Name="EngineConfig"
                                            Width="80"
                                            Height="30"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.EngineConfiguration}">
                                            <ComboBoxItem Content="V" />
                                            <ComboBoxItem Content="I" />
                                            <ComboBoxItem Content="F" />
                                            <ComboBoxItem Content="E" />
                                            <ComboBoxItem Content="W" />
                                            <ComboBoxItem Content="R" />
                                        </ComboBox>
                                        <!--  Cylinders  -->
                                        <StackPanel
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                MinWidth="75"
                                                Margin="57,0,8,0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                TextAlignment="Right"><Run Text="Cylinders" /></TextBlock>
                                            <ComboBox
                                                Name="EngineCylinders"
                                                Width="80"
                                                Height="30"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Text="{Binding S.EngineCylinders}">
                                                <ComboBoxItem Content="1" />
                                                <ComboBoxItem Content="2" />
                                                <ComboBoxItem Content="3" />
                                                <ComboBoxItem Content="4" />
                                                <ComboBoxItem Content="5" />
                                                <ComboBoxItem Content="6" />
                                                <ComboBoxItem Content="8" />
                                                <ComboBoxItem Content="10" />
                                                <ComboBoxItem Content="12" />
                                                <ComboBoxItem Content="16" />
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Engine location  -->
                                    <StackPanel
                                        Margin="0,15,19,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="Eng Location" /></TextBlock>
                                        <ComboBox
                                            Name="Englocation"
                                            Width="80"
                                            Height="30"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.EngineLocation}">
                                            <ComboBoxItem Content="F" />
                                            <ComboBoxItem Content="FM" />
                                            <ComboBoxItem Content="M" />
                                            <ComboBoxItem Content="R" />
                                            <ComboBoxItem Content="RM" />
                                        </ComboBox>

                                        <!--  Drivetrain  -->
                                        <StackPanel
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                MinWidth="75"
                                                Margin="57,0,8,0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                TextAlignment="Right"><Run Text="Drivetrain" /></TextBlock>
                                            <ComboBox
                                                Name="Drivetrain"
                                                Width="80"
                                                Height="30"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Text="{Binding S.PoweredWheels}">
                                                <ComboBoxItem Content="F" />
                                                <ComboBoxItem Content="R" />
                                                <ComboBoxItem Content="A" />
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  HP  -->
                                    <StackPanel
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="HP" /></TextBlock>
                                        <TextBox
                                            x:Name="MaxPowerHP"
                                            MinWidth="80"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.MaxPower}" />
                                        <!--  NM  -->
                                        <StackPanel
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                MinWidth="75"
                                                Margin="57,0,8,0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                TextAlignment="Right"><Run Text="NM" /></TextBlock>
                                            <TextBox
                                                x:Name="MaxTorqueNM"
                                                MinWidth="80"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Text="{Binding S.MaxTorque}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  EHP  -->
                                    <StackPanel
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            MinWidth="75"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            TextAlignment="Right"><Run Text="EHP" /></TextBlock>
                                        <TextBox
                                            x:Name="EMaxPowerHP"
                                            MinWidth="80"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Text="{Binding S.ElectricMaxPower}" />
                                        <!--  CC  -->
                                        <StackPanel
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                MinWidth="75"
                                                Margin="57,0,8,0"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                TextAlignment="Right"><Run Text="CC" /></TextBlock>
                                            <TextBox
                                                x:Name="Displacement"
                                                MinWidth="80"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Text="{Binding S.Displacement}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Refresh & Lock  -->
                                    <StackPanel
                                        Margin="0,25,4,4"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <styles:SHButtonSecondary
                                            Width="150"
                                            Height="35"
                                            VerticalContentAlignment="Center"
                                            Background="#4B4495"
                                            Click="Lock_Click"
                                            ContentControl.Content="{Binding D.LockedText}"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            FrameworkElement.Name="Lock" />
                                        <styles:SHButtonSecondary
                                            Width="150"
                                            Height="35"
                                            Margin="5,0,0,0"
                                            VerticalContentAlignment="Center"
                                            Background="#4B4495"
                                            Click="Refresh_Click"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            FrameworkElement.Name="Refresh">
                                            Refresh
                                        </styles:SHButtonSecondary>
                                    </StackPanel>
                                </StackPanel>


                            </Expander>
                            <!--  eq container fundamental  -->
                            <StackPanel>
                                <Expander
                                    Margin="0,6,0,3"
                                    FontFamily="Segoe UI"
                                    FontSize="16"
                                    Header="EQ - Fundamental"
                                    IsExpanded="False" />
                                <!--  eq container 1st harmonic  -->
                                <StackPanel>
                                    <Expander
                                        Margin="0,3"
                                        FontFamily="Segoe UI"
                                        FontSize="16"
                                        Header="EQ - 1st Harmonic"
                                        IsExpanded="False" />
                                    <!--  eq container 2nd harmonic  -->
                                    <StackPanel>
                                        <Expander
                                            Margin="0,3"
                                            FontFamily="Segoe UI"
                                            FontSize="16"
                                            Header="EQ - 2nd Harmonic"
                                            IsExpanded="False" />
                                        <!--  eq container 3rd harmonic  -->
                                        <StackPanel>
                                            <Expander
                                                Margin="0,3"
                                                FontFamily="Segoe UI"
                                                FontSize="16"
                                                Header="EQ - 3rd Harmonic"
                                                IsExpanded="False" />
                                            <!--  eq container 4th harmonic  -->
                                            <StackPanel>
                                                <Expander
                                                    Margin="0,3"
                                                    FontFamily="Segoe UI"
                                                    FontSize="16"
                                                    Header="EQ - 4th Harmonic"
                                                    IsExpanded="False" />
                                            </StackPanel>
                                            <!--  eq container 5th harmonic  -->
                                            <StackPanel>
                                                <Expander
                                                    Margin="0,3"
                                                    FontFamily="Segoe UI"
                                                    FontSize="16"
                                                    Header="EQ - 5th Harmonic"
                                                    IsExpanded="False" />
                                            </StackPanel>
                                            <!--  eq container 6th harmonic  -->
                                            <StackPanel>
                                                <Expander
                                                    Margin="0,3"
                                                    FontFamily="Segoe UI"
                                                    FontSize="16"
                                                    Header="EQ - 6th Harmonic"
                                                    IsExpanded="False" />
                                            </StackPanel>
                                            <!--  eq container 7th harmonic  -->
                                            <StackPanel>
                                                <Expander
                                                    Margin="0,3"
                                                    FontFamily="Segoe UI"
                                                    FontSize="16"
                                                    Header="EQ - 7th Harmonic"
                                                    IsExpanded="False" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>






                    <!--  status bar  -->
                    <StatusBar Grid.Row="1" FontSize="16">
                        <!--  version number  -->
                        <StatusBarItem>
                            <TextBlock x:Name="Version" />
                        </StatusBarItem>
                        <!--  status message  -->
                        <StatusBarItem>
                            <TextBlock Text="{Binding D.LoadText}" />
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </TabItem>


            <!--  NEXT TAB 2 - Settings  -->
            <TabItem Width="240" Padding="0,0,10,0">
                <HeaderedContentControl.Header>
                    <StackPanel
                        Margin="0,0,30,0"
                        Orientation="Horizontal"
                        Style="{StaticResource TabVis}">
                        <Rectangle Style="{StaticResource IconRectangle}">
                            <UIElement.OpacityMask>
                                <ImageBrush ImageSource="{Binding SuspensionIcon}" RenderOptions.BitmapScalingMode="HighQuality" />
                            </UIElement.OpacityMask>
                        </Rectangle>
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="30"
                            Opacity="0.9"
                            Text="Settings" />
                    </StackPanel>
                </HeaderedContentControl.Header>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Orientation="vertical">
                            <StackPanel>
                                <!--  EXPANDER Suspension  -->
                                <Expander
                                    Margin="0,6"
                                    BorderThickness="2"
                                    FontFamily="Segoe UI"
                                    FontSize="14"
                                    Header="Suspension Multipliers"
                                    IsExpanded="True">
                                    <StackPanel>

                                        <!--  Suspension all/cuurent game multi headers  -->
                                        <StackPanel
                                            Margin="0,15,0,8"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock FontWeight="SemiBold" TextAlignment="Center">
                                                All Games - Multi <LineBreak />
                                                [0.0- (1.5) -5.0]
                                            </TextBlock>
                                            <TextBlock Margin="50,0,0,0" FontWeight="SemiBold" TextAlignment="Center">
                                                Current Game - Multi <LineBreak /> 
                                                [0.0 - 2.0]
                                            </TextBlock>
                                        </StackPanel>
                                        <!--  Suspension all/current game textboxes  -->
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,12,0">
                                            <TextBox
                                                Name="SuspensionMultAll"
                                                Width="80"
                                                Margin="0,0,0,0"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontSize="16"
                                                Text="{Binding D.SuspensionMultAll}" />
                                            <TextBox
                                                Name="SuspensionMult"
                                                Width="80"
                                                Margin="90,0,0,0"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontSize="16"
                                                Text="{Binding D.SuspensionMult}" />
                                        </StackPanel>




                                        <!--  suspension all/current game gamma multi headers  -->
                                        <StackPanel
                                            Margin="0,15,0,8"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock FontWeight="SemiBold" TextAlignment="Center">
                                                All Games - Gamma <LineBreak/>
                                                [0.0- (1.75) -5.0]
                                            </TextBlock>
                                            <TextBlock Margin="50,0,0,0" FontWeight="SemiBold" TextAlignment="Center">
                                                Current Game - Gamma <LineBreak/>
                                                [0.0 - 2.0]
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,12,10">
                                            <!--  suspension all/current game gamma textboxes  -->
                                            <TextBox
                                                Name="SuspensionGammaAll"
                                                Width="80"
                                                Margin="0,0,0,0"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontSize="16"
                                                Text="{Binding D.SuspensionGammaAll}" />
                                            <TextBox
                                                Name="SuspensionGamma"
                                                Width="80"
                                                Margin="90,0,0,0"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                FontSize="16"
                                                Text="{Binding D.SuspensionGamma}" />
                                        </StackPanel>

                                    </StackPanel>
                                </Expander>
                            </StackPanel>


                            <Grid>

                                <StackPanel>

                                    <!--  EXPANDER Gforce  -->
                                    <Expander
                                        HorizontalAlignment="Stretch"
                                        BorderThickness="2"
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        Header="G-Force"
                                        IsExpanded="True">

                                        <StackPanel>


                                            <!--  GForce Settings  -->
                                            <StackPanel
                                                Margin="0,20"
